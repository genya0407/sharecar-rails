- if @fuel.errors.any?
  = render 'widgets/errors', object: @fuel
#create-fuel
  .Card
    .Card--Content
      span.Card--Content--Title
        | 給油
      = form_for @fuel, url: car_fuels_path, html: { class: 'Form' } do |f|
        .Form--InputSet
          .Form--InputSet--Field.s12
            = f.label :amount, 'ガソリン代'
            = f.number_field :amount
        = f.submit "記録", class: "Form--SubmitBtn"
- @fuels.each do |fuel|
  .Card.fuel
    .Card--Content
      p
        span.Card--Content--Title
          = fuel.user.name
      p
        = simple_datetime fuel.created_at
      p
        = fuel.amount
        | 円
    - if fuel.user.id == current_user.id
      .Card--Action
        = link_to car_fuel_path(id: fuel),
        -                   { method: :delete,
        -                     data: { confirm: "#{fuel.amount}円の給油履歴を取り消しますか？" },
        -                     class: 'Card--Action--FAB btn-floating red delete-fuel' } do
        i.Card--Action--FAB--Icon
          | delete
