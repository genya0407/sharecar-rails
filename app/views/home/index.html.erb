<% @cars.each do |car| %>
  <% if car.available? %>
    <div class="Card">
      <div class="Card--Content">
        <p class="Card--Content--Title">
          <%= car.name %>
        </p>
        <% if car.note.present? %>
          <p class='right-align' style='white-space: pre-wrap'>
            <%= car.note %>
          </p>
        <% end %>
        <% if car.occupied? %>
          <p class='right-align current-drive'>
            <%= car.current_driver.name %>が
            <%= simple_datetime car.current_drive.end_at %>まで使用
          </p>
        <% end %>
      </div>
      <% if car.occupied? %>
      <div class="Card--Action">
        <%= link_to normalize_tel(car.current_driver.phone_number) do %>
          <%= render partial: 'widgets/card_action', locals: { color: 'green', icon: 'phone' } %>
        <% end %>
        <%= mail_to car.current_driver.email do %>
          <%= render partial: 'widgets/card_action', locals: { color: 'green', icon: 'email' } %>
        <% end %>
      </div>
      <% end %>
      <div class="Card--Action">
        <%= link_to car_drives_path(car_id: car.id), class: "Card--Action--FAB btn-floating green" do %>
          <i class="Card--Action--FAB--Icon">history</i></a>
        <% end %>
        <%= link_to new_car_fuel_path(car_id: car.id), class: "Card--Action--FAB btn-floating green" do %>
          <i class="Card--Action--FAB--Icon">local_gas_station</i></a>
        <% end %>
        <%= link_to new_car_booking_path(car_id: car.id), class: "Card--Action--FAB btn-floating green" do %>
          <i class="Card--Action--FAB--Icon">bookmark</i></a>
        <% end %>
        <% if car.using?(current_user.id) %>
          <%= link_to edit_car_drive_path(car_id: car.id, id: car.using_drive(current_user.id).id), class: "Card--Action--FAB btn-floating red" do %>
            <i class="Card--Action--FAB--Icon">done</i>
          <% end %>
        <% else %>
          <%= link_to new_car_drive_path(car.id), class: "Card--Action--FAB btn-floating green" do %>
            <i class="Card--Action--FAB--Icon">send</i>
          <% end %>
        <% end %>
      </div>
    </div>
  <% elsif car.repairing? %>
    <div class="Card unavailable">
      <div class="Card--Content">
        <p class="Card--Content--Title">
          <%= car.name %>
        </p>
        <p class='right-align'>
            使用禁止
        </p>
      </div>
    </div>
  <% end %>
<% end %>
