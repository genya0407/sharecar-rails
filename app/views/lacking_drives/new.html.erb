<div class='Card'>
  <div class='Card--Content'>
    <span class='Card--Content--Title'><%= @car&.name %></span>
  </div>
</div>

<% if @form.errors.any? %>
  <%= render 'widgets/errors', object: @form %>
<% end %>

<div id='create-drive'>
  <div class="Card">
    <div class="Card--Content">
      <span class="Card--Content--Title">乗車記録</span>
      <%= form_for @form, url: car_lacking_drives_path(car_id: @form.car_id), html: { class: 'Form' } do |f| %>
      <div class='Form--InputSet'>
        <div class="Form--InputSet--Field s6">
          <%= f.label :start_meter, '乗車時のメーター' %>
          <%= f.number_field :start_meter %>
        </div>
        <div class="Form--InputSet--Field s6">
          <%= f.label :end_meter, '降車時のメーター' %>
          <%= f.number_field :end_meter %>
        </div>
      </div>
      <%= f.submit "作成", class: "Form--SubmitBtn" %>
      <% end %>
    </div>
  </div>
</div>