<% if object.present? %>
  <% object.each do |booking| %>
    <div class='card booking'>
      <div class='card-content'>
        <p>
          <span class='card-title'><%= booking.user.name %></span>
          <%= simple_datetime booking.start_at %> 〜 <%= simple_datetime booking.end_at %>
        </p>
      </div>
      <div class='card-action right-align'>
        <% if booking.user.id == current_user.id %>
          <%= link_to car_booking_path(id: booking),
                      { method: :delete,
                        data: { confirm: "#{booking.start_at.to_date}の予約を取り消しますか？" }} do %>
            <%= render partial: 'widgets/card_action', locals: { color: 'red', icon: 'delete' } %>
          <% end %>
        <% end %>
        <%= link_to normalize_tel(booking.user.phone_number) do %>
          <%= render partial: 'widgets/card_action', locals: { color: 'green', icon: 'phone' } %>
        <% end %>
        <%= mail_to booking.user.email do %>
          <%= render partial: 'widgets/card_action', locals: { color: 'green', icon: 'email' } %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
